{
    "name": "occt-wasm",
    "version": "1.0.0",
    "description": "OCCT WASM",
    "main": "index.js",
    "scripts": {
        "prepare": "tsx scripts/setupLib.ts",
        "clean:build": "tsx scripts/cleanBuild.ts",
        "build": "tsx scripts/build.ts",
        "build:win": "call source\\emsdk\\emsdk_env.bat && pnpm run build:core",
        "build:unix": "source source/emsdk/emsdk_env.sh && pnpm run build:core",
        "build:core": "pnpm clean:build && cd build && emcmake cmake .. -G Ninja && cmake --build .",
        "examples:dev": "cd examples && vite",
        "examples:build": "cd examples && vite build",
        "examples:preview": "cd examples && vite preview"
    },
    "devDependencies": {
        "@types/node": "^25.0.3",
        "@types/three": "^0.180.0",
        "tsx": "^4.21.0",
        "vite": "^7.3.1",
        "vite-plugin-wasm": "^3.5.0",
        "typescript": "^5.9.3",
        "lil-gui": "^0.21.0"
    },
    "dependencies": {
        "three": "^0.180.0"
    }
}